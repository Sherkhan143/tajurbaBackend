{{>admin/header}}

<body class="inner_page widgets">
   <div class="full_container">
      <div class="inner_container">
         <!-- Sidebar  -->
         {{>admin/sidebar}}
         <!-- end sidebar -->
         <!-- right content -->
         <div id="content">
            <!-- topbar -->
            {{>admin/topbar}}
            <!-- end topbar -->
            <!-- dashboard inner -->
            <div class="midde_cont">
               <div class="container-fluid">
                  <div class="row column_title">
                     <div class="col-md-12">
                        <div class="page_title">
                           <h2>Blog</h2>
                           {{#ifnoteq success ''}}
                           <div class="alert alert-success mt-3" role="alert">
                              {{success}}
                           </div>
                           {{/ifnoteq}}
                        </div>
                     </div>
                  </div>
                  <form action="/blogs" method="post">
                     <div class="row">
                        <!-- table section -->
                        <div>
                           <p style="padding:15px">
                              <a href="/admin/blogs/add-blog"><button type="button"
                                    class="btn btn-success">Add</button></a>
                              <button formaction="/admin/blogs/multiPublish" class="btn btn-success">Publish</button>
                              <button formaction="/admin/blogs/multiUnPublish"
                                 class="btn btn-success">Unpublish</button>
                              <button formaction="/admin/blogs/multiDelete" class="btn btn-success">Delete</button>
                           </p>
                        </div>
                        <div class="col-md-12">
                           <div class="white_shd full margin_bottom_30">
                              <div class="full graph_head">
                                 <div class="heading1 margin_0 d-flex justify-content-between w-100">
                                    <h2>Blog List</h2>
                                    <!--              <a href="add-user.php"><button class='btnprd' style=""><i class="fa fa-plus" aria-hidden="true"></i> Add</button></a> -->
                                 </div>
                              </div>

                              <div class="table_section padding_infor_info">

                                 <span id="msgact">
                                 </span>

                                 <span id="asgact"></span>
                                 <span id="dsgact"></span>

                                 <div class="table-responsive-sm">
                                    <table class="table">
                                       <thead>
                                          <tr>
                                             <th><input type="checkbox" onchange="checkAll(this)" id="checkall"
                                                   name="checkall"></th>
                                             <th>#</th>
                                             <th>Title</th>
                                             <th>Category</th>
                                             <th>Image</th>
                                             <th>Date</th>
                                             <th>Action</th>
                                          </tr>
                                       </thead>
                                       {{#blogs}}
                                       <tbody>
                                          <tr>
                                             <th><input type="checkbox" class="checbox" value="{{id}}" name="checkbox"
                                                   onchange="checkbox"></th>
                                             <td>{{incitement @index}}</td>
                                             <td>{{title}}</td>
                                             <td>{{category_id}}</td>
                                             <td class="img-column"
                                                style="width: 175px;height:150px;object-fit:contain">
                                                <img src="/static/admin/images/uploaded_images/{{feature_image}}"
                                                   height="100%" alt="thumbnail">
                                             </td>
                                             <td>{{created_at}}</td>
                                             <td>
                                                <form action="/admin/blogs" method="post"></form>
                                                <div class="btn-wrapper">
                                                   <style>
                                                      button i {
                                                         color: #000;
                                                      }
                                                   </style>
                                                   <li class="btn">
                                                      <a href="/admin/blogs/edit/{{id}}">
                                                         <i class="fa-regular fa-pen-to-square"></i>
                                                      </a>
                                                   </li>
                                                   <li class="btn">
                                                      <a href="/admin/blogs/delete/{{id}}">
                                                         <i class="fa-solid fa-trash"></i>
                                                      </a>
                                                   </li>
                                                   {{!-- <li class="btn">
                                                      <a href="">
                                                         <label class="switch">
                                                            <input type="checkbox" name="publishBtn" id="play"
                                                               onclick="switchBtn()" class="" value="0">
                                                            <span class="slider round"></span>
                                                         </label>
                                                      </a>
                                                   </li> --}}
                                                   <div>
                                             </td>
                                          </tr>
                                       </tbody>
                  </form>
                  {{/blogs}}
                  </table>
               </div>
            </div>
         </div>
      </div>
      <!-- table section -->

   </div>
   </div>

   <!-- footer -->
   {{>admin/footer}}
   </div>
   <!-- end dashboard inner -->
   </div>
   </div>
   </div>
   {{>admin/scripts}}




</body>

</html>