{{>admin/header}}

<body class="inner_page widgets">
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            {{>admin/sidebar}}
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                {{>admin/topbar}}
                <!-- end topbar -->
                <!-- dashboard inner -->
                <div class="midde_cont">
                    <div class="container-fluid">
                        <div class="row column_title">
                            <div class="col-md-12">
                                <div class="page_title">
                                    <h2>Testimonials</h2>
                                    {{#ifnoteq success ''}}
                                    <div class="alert alert-success mt-3" role="alert">
                                        {{success}}
                                    </div>
                                    {{/ifnoteq}}
                                </div>
                            </div>
                        </div>
                        <form action="/admin/testimonials/" method="post">
                            <div class="row">
                                <!-- table section -->
                                <div>
                                    <p style="padding:15px">
                                        <a href="/admin/testimonials/add-testimonial"><button type="button"
                                                class="btn btn-success">Add</button></a>
                                        <button formaction="/admin/testimonials/multiPublish?_method=put"
                                            class="btn btn-success">Publish</button>
                                        <button formaction="/admin/testimonials/multiUnPublish?_method=put"
                                            class="btn btn-success">Unpublish</button>
                                        <button formaction="/admin/testimonials/multiDelete?_method=delete"
                                            class="btn btn-success">Delete</button>
                                    </p>
                                </div>
                                <div class="col-md-12">
                                    <div class="white_shd full margin_bottom_30">
                                        <div class="full graph_head">
                                            <div class="heading1 margin_0 d-flex justify-content-between w-100">
                                                <h2>Testimonial List</h2>
                                            </div>
                                        </div>

                                        <div class="table_section padding_infor_info">
                                            <div class="table-responsive-sm">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th><input type="checkbox" onchange="checkAll(this)"
                                                                    id="checkall" name="checkall"></th>
                                                            <th>#</th>
                                                            <th>Name</th>
                                                            <th>Description</th>
                                                            <th>Profile Image</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    {{#testimonials}}
                                                    <tbody>
                                                        <tr>
                                                            <th><input type="checkbox" class="checbox" value="{{id}}"
                                                                    name="checkbox" onchange="checkbox"></th>
                                                            <td>{{incitement @index}}</td>
                                                            <td>{{name}}</td>
                                                            <td>{{description}}</td>
                                                            <td class="img-column"
                                                                style="width: 175px;height:150px;object-fit:contain">
                                                                <img src="/static/user/images/uploaded_images/{{profile_image}}"
                                                                    height="100%" alt="thumbnail">
                                                            </td>
                                                            <td>
                                                                <div class="btn-wrapper">
                                                                    <style>
                                                                        button i {
                                                                            color: #000;
                                                                        }
                                                                    </style>
                                                                    <li class="btn">
                                                                        <a href="/admin/testimonials/edit/{{id}}">
                                                                            <i class="fa-regular fa-pen-to-square"></i>
                                                                        </a>
                                                                    </li>
                                                                    <li class="btn">
                                                                        <a href="/admin/testimonials/delete/{{id}}">
                                                                            <i class="fa-solid fa-trash"></i>
                                                                        </a>
                                                                    </li>
                                                                    {{!-- <li class="btn">
                                                                        <a href="">
                                                                            <label class="switch">
                                                                                <input type="checkbox" name="publishBtn"
                                                                                    id="play" onclick="switchBtn()"
                                                                                    class="" value="0">
                                                                                <span class="slider round"></span>
                                                                            </label>
                                                                        </a>
                                                                    </li> --}}
                                                                    <div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                        </form>
                        {{/testimonials}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- table section -->

    </div>
    </div>

    <!-- footer -->
    {{>admin/footer}}
    </div>
    <!-- end dashboard inner -->
    </div>
    </div>
    </div>
    {{>admin/scripts}}

</body>

</html>