{{>admin/header}}

<body class="inner_page widgets">
    <div class="full_container">
        <div class="inner_container">
            <!-- Sidebar  -->
            {{>admin/sidebar}}
            <!-- end sidebar -->
            <!-- right content -->
            <div id="content">
                <!-- topbar -->
                {{>admin/topbar}}
                <!-- end topbar -->
                <div class="midde_cont">
                    <div class="container-fluid">
                        <div class="row column_title">
                            <div class="col-md-12">
                                <div class="page_title">
                                    <h2>Blog</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <!-- table section -->
                            <div class="col-md-12">
                                <div class="white_shd full margin_bottom_30">
                                    <div class="full graph_head">
                                        <div class="heading1 margin_0">
                                            <h2>Update Blog</h2>
                                        </div>
                                    </div>
                                    {{#blogs}}
                                    <div class="table_section padding_infor_info">
                                        <div class="table-responsive-sm">
                                            <form action="/admin/blogs/edit/{{id}}?_method=put" method="post"
                                                enctype="multipart/form-data">
                                                <div class="mb-3 mt-3">
                                                    <label for="title" class="form-label">Title <span class="errormsg"
                                                            id="errname"></span></label>
                                                    <input type="text" class="form-control" name="title"
                                                        value="{{title}}">
                                                </div>

                                                <div class="mb-3 mt-3">
                                                    <label>Meta Description</label>
                                                    <input type="text" class="form-control" name="metadesc"
                                                        value="{{meta_description}}" id="metadesc">
                                                </div>

                                                <div class="mb-3 mt-3">
                                                    <label>Meta Keywords</label>
                                                    <input type="text" class="form-control" name="metakeywords"
                                                        value="{{meta_keywords}}" id="metakeywords">
                                                </div>

                                                <div class="mb-3 mt-3">
                                                    <label>Category <span class="errormsg"
                                                            id="errcategory"></span></label>
                                                    <select class="form-control" name="categoryid" id="categoryid">
                                                        <option value="{{category_id}}">Select Category</option>
                                                        <option value="1">Blog Category 1</option>
                                                        <option value="2">Blog Category 2</option>
                                                    </select>
                                                </div>

                                                <div class="mb-3 mt-3">
                                                    <label for="details">Details</label>
                                                    <textarea name="details" class="form-control" value="hello"
                                                        cols="30" rows="10">{{blog_detail}}</textarea>
                                                </div>

                                                <div class="mb-3 mt-3">
                                                    <label for="name" class="form-label">Update Feature <span
                                                            class="errormsg" id="errproductimage"></span></label>
                                                    <input type="file" class="form-control" name="featureImage"
                                                        id="postimage">
                                                    <div class="feature-img-wrapper mt-3">
                                                        <img src="/static/admin/images/uploaded_images/{{feature_image}}"
                                                            alt="#">
                                                    </div>
                                                </div>

                                                <div class="mb-3 mt-3">
                                                    <label for="name" class="form-label">Update Thumbnails <span
                                                            class="errormsg" id="errcatalogue"></span></label>
                                                    <input type="file" class="form-control" name="thumbnails"
                                                        id="thumbnail-img">
                                                    <div class="thumbnail-img-wrapper mt-3">
                                                        <img src="/static/admin/images/uploaded_images/{{thumbnail_image}}"
                                                            alt="#">
                                                    </div>
                                                </div>
                                                {{/blogs}}

