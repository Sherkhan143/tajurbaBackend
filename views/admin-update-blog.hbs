                                                <div class="mb-3 mt-3">
                                                    <label for="name" class="form-label">Update Post Images <span
                                                            class="errormsg" id="errproductimage"></span></label>
                                                        <input type="file" class="form-control" multiple
                                                        name="postImages" id="postimages">
                                                    <div class="post-img-wrapper mt-3">
                                                        {{#postImages}}
                                                        <div class="post-img-container">
                                                            <div class="post-img">
                                                                <img src="/static/admin/images/uploaded_images/{{post_image}}"
                                                                    alt="post-image">
                                                            </div>
                                                            <div class="post-update-btns">
                                                                <a href="/admin/blogs/update/post-image/{{id}}">
                                                                    <i class="fa-regular fa-pen-to-square"></i>
                                                                </a>
                                                                <a href="/admin/blogs/delete/post-image/{{id}}">
