                                                    </div>
                                                </div>

                                                {{#blogs}}
                                                <div class="form-group">
                                                    <input class="form-control form-control-lg" type="date"
                                                        name="postingdate" id="postingdate" value="{{created_at}}">
                                                </div>

                                                <div class="form-group">
                                                    <label for="name" class="form-label d-block">Publish Now <span
                                                            class="errormsg" id="errcatalogue"></span></label>
                                                    <label class="switch">
                                                        <input type="checkbox" name="publishBtn" id="play"
                                                            onclick="switchBtn()" value="0">
                                                        <span class="slider round"></span>
                                                    </label>
                                                </div>
                                                {{/blogs}}

                                                <button class="main_bt2" name="btnsave">Update</button>
                                            </form>
                                        </div>

                                    </div>
